<mvc:View
	controllerName="next.app.controller.List"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:table="next.core.ui.table"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc.View"
	xmlns:widget="next.core.widget"
	displayBlock="true">
	<Page title="{i18n>list/title}">
	<content>
		<table:ListViewTable dataTable="OCRD" id="listTable" rows="{list>/}" rowActionCount="1" selectionMode="MultiToggle">
			<table:defaultColumns>
				<table:defaultColumn text="#" dataBind="id"/>
				<table:defaultColumn text="Business Partner Code" dataBind="bpCode"/>
				<table:defaultColumn text="Business Partner Name" dataBind="bpName"/>
			</table:defaultColumns>
			<table:extension>
				<OverflowToolbar>
					<Button icon="sap-icon://add" type="Transparent" press="onAdd"/>
					<Button icon="sap-icon://delete" type="Transparent" press="onDelete"/>
					<Button icon="sap-icon://action-settings" type="Transparent" press="onTestClick"/>
				</OverflowToolbar>
			</table:extension>
		</table:ListViewTable>
	</content>
	</Page>
</mvc:View>
