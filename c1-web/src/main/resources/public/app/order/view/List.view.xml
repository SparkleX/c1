<mvc:View
	controllerName="next.app.controller.List"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:b1="sap.b1.core.control"
	displayBlock="true">
	<Page title="{i18n>list/title}">
	<content>

	<List
		items="{list>/}" >
		<items>
			<ObjectListItem 
				title="{list>id}"
				type="Active"
				press="onListItemPress"
				number="{list>remarks}"
			>
				<firstStatus>
					<ObjectStatus text="{list>id}"/>
				</firstStatus>				
				<attributes>
					<ObjectAttribute text="{list>remarks}" />
				</attributes>
			</ObjectListItem>
		</items>
	</List>	
	</content>
	</Page>
</mvc:View>
