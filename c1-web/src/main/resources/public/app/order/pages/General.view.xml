<mvc:View
	id="idGeneralView"
	controllerName="next.app.controller.Detail" 
	xmlns:layout="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:widget="next.core.widget"	
	width="100%">
	<layout:Grid width="100%" defaultSpan="L6 M6 S12">
		<layout:content>
			<form:SimpleForm layout="ColumnLayout">
				<core:Title text="Basic Information"/>
				<form:content>
					<Label text="Document Number" />
					<Input value="{/id}"/>
					<Label text="Business Partner Code" />
					<widget:LinkInput value="{/bpId}"/>
					<Label text="Document Total"/>		
					<widget:FmtInput value="{/docTotal}"/>					
						
				</form:content>
			</form:SimpleForm>	
			<form:SimpleForm layout="ColumnLayout" >			
				<core:Title text="Block 2"/>
				<form:layoutData>
					<layout:GridData linebreakL="true" linebreakM="true" linebreakS="true"/>
				</form:layoutData>
				<form:content>
					<Input value="{/ConBP}" />
					<Select id="idConBp" selectedKey="{/ConBP}" showSecondaryValues="true" forceSelection="false">
						<core:ListItem key="C200" text="2"/>
						<core:ListItem key="C100" text="1"/>
					</Select>
				</form:content>
			</form:SimpleForm>				
			<form:SimpleForm layout="ColumnLayout" >
				<core:Title text="Block 3"/>
			</form:SimpleForm>				
		</layout:content>
	</layout:Grid>
</mvc:View>
