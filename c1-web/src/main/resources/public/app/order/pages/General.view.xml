<mvc:View
	id="idGeneralView"
	controllerName="next.app.controller.Detail"
	xmlns:layout="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:widget="next.core.widget"
	width="100%">
	<layout:Grid width="100%" defaultSpan="L6 M6 S12">
		<layout:content>
			<form:SimpleForm layout="ColumnLayout">
				<core:Title text="Basic Information"/>
				<form:content>
					<Label text="Business Partner Code" />
					<widget:LinkInput value="{/bpId}"/>
				</form:content>
			</form:SimpleForm>
			<form:SimpleForm layout="ColumnLayout" >
				<core:Title text="Document Status"/>
				<form:content>
					<Label text="Document Number" />
					<Input value="{/id}"/>
					<Label text="Document Status" />
					<widget:Select selectedKey="{/docStatus}" dataFormat="ORDR.docStatus" showSecondaryValues="true" forceSelection="false">
					<!-- 	<core:ListItem key="C200" text="2"/>
						<core:ListItem key="C100" text="1"/> -->
					</widget:Select>
				</form:content>
			</form:SimpleForm>
			<form:SimpleForm layout="ColumnLayout" >
				<core:Title text=""/>
				<form:layoutData>
					<layout:GridData linebreakL="true" linebreakM="true" linebreakS="true"/>
				</form:layoutData>
			</form:SimpleForm>
			<form:SimpleForm layout="ColumnLayout" >
				<core:Title text="Summary"/>
				<Label text="Document Total" />
				<widget:FmtInput dataFormat="ORDR.docTotal" data="{/docTotal}"/>
			</form:SimpleForm>
		</layout:content>
	</layout:Grid>
</mvc:View>
