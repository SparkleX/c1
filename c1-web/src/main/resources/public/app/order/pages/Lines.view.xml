<mvc:View
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:table="sap.ui.table"
		xmlns="sap.m"
		xmlns:core="sap.ui.core"
		xmlns:widget="next.core.widget"
		width="100%">
		<table:Table rows="{/rdr1}">
			<table:extension>
				<OverflowToolbar id="otb1">
					<Button icon="sap-icon://add" type="Transparent"/>
					<Button icon="sap-icon://delete" type="Transparent"/>
					<Button icon="sap-icon://action-settings" type="Transparent"/>

				</OverflowToolbar>
			</table:extension>
			<table:columns>
				<table:Column>
					<Label text="#" />
					<table:template>
						<Text text="{visOrder}" />
					</table:template>
				</table:Column>
				<table:Column>
					<Label text="Item" />
					<table:template>
						<widget:LinkInput dataValue="{itemId}" dataFormat="RDR1.itemId"/>
					</table:template>
				</table:Column>
				<table:Column >
					<Label text="Price" />
					<table:template>
						<widget:FmtInput dataValue="{price}" dataFormat="RDR1.price"/>
					</table:template>
				</table:Column>
				<table:Column>
					<Label text="Quantity" />
					<table:template>
						<widget:FmtInput dataValue="{quantity}" dataFormat="RDR1.quantity" />
					</table:template>
				</table:Column>
				<table:Column>
					<Label text="Total" />
					<table:template>
						<widget:FmtInput dataValue="{lineTotal}" dataFormat="RDR1.lineTotal"/>
					</table:template>
				</table:Column>
			</table:columns>
		</table:Table>
</mvc:View>
