<mvc:View
	id="idGeneralView"
	xmlns:layout="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:widget="next.core.widget"
	width="100%">
	<layout:BlockLayout>
		<layout:BlockLayoutRow>
			<layout:BlockLayoutCell title="Basic Information">
				<widget:LabelInput label="Business Partner Code" dataValue="{/bpId}" dataFormat = "ORDR.bpId"/>
				<Label text="Business Partner Code"/>
				<widget:LinkInput dataValue="{/bpId}" dataFormat = "ORDR.bpId"/>			
			</layout:BlockLayoutCell>
			<layout:BlockLayoutCell	title="Document Status">
				<widget:LabelInput label="Document Number" dataValue="{/id}" dataFormat = "ORDR.bpId"/>
				<widget:LabelDatePicker label="Document Date"  dataValue="{/createDate}" dataFormat = "ORDR.createDate"/>
				<Label text="Document Status" width="100%"/>
				<widget:Select  width="100%" selectedKey="{/docStatus}" dataFormat="ORDR.docStatus" showSecondaryValues="true" forceSelection="false"/>
			</layout:BlockLayoutCell>
		</layout:BlockLayoutRow>
	</layout:BlockLayout>	
</mvc:View>
