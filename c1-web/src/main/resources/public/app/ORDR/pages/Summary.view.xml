<mvc:View
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m"
		xmlns:form="sap.ui.layout.form"
		xmlns:layout="sap.ui.layout"
		xmlns:core="sap.ui.core"
		xmlns:widget="next.core.widget"
		width="100%">
	<layout:Grid width="100%" defaultSpan="L6 M6 S12">
		<layout:content>
			<form:SimpleForm layout="ColumnLayout" >
				<core:Title text=""/>
				<form:layoutData>
					<layout:GridData linebreakL="true" linebreakM="true" linebreakS="true"/>
				</form:layoutData>
			</form:SimpleForm>

			<form:SimpleForm layout="ColumnLayout" >
				<core:Title text="Summary"/>
				<Label text="Document Total" />
				<widget:FmtInput dataFormat="ORDR.docTotal" dataValue="{/docTotal}"/>
				<!--<Input valueLiveUpdate="true" value="{path: '/docTotal', type: 'sap.ui.model.type.Integer'}" enabled="true"/>-->
			</form:SimpleForm>
		</layout:content>
	</layout:Grid>
</mvc:View>
